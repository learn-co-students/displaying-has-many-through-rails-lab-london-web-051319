<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @doctor.department %>
</p>

<h3>Appointments</h3>

<% @doctor.appointments.each do |appt| %>
  <p>Date: <%= appt.appointment_datetime.strftime('%B %d, %Y at %H:%M') %></p>
  <p>Patient: <%= link_to appt.patient.name, appt.patient %></p>
<% end %>

<%= link_to 'Edit', edit_doctor_path(@doctor) %> |
<%= link_to 'Back', doctors_path %>
